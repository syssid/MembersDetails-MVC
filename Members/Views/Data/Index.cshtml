@model IEnumerable<Members.Models.Members>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-danger">All Member Details</h2>
        </div>
    </div>
</div>

<p class="create-new-button">
    <style>
        .create-new-button {
            text-align: right;
        }

            .create-new-button a {
                display: inline-block;
                padding: 6px 12px;
                background-color: #007bff;
                color: #fff;
                border: 1px solid #007bff;
                border-radius: 4px;
                text-decoration: none;
            }
    </style>

    @Html.ActionLink("Create New", "Create")


</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PAN_AADHAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAN_AADHAR)
            </td>
            @*       <td>
            @Html.DisplayFor(modelItem => item.IdentificationType)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Members_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @{
                var photoPath = item.Photo;
                var photoName = Path.GetFileName(photoPath);
            }

            <td>
                <a href="@Url.Content("~/img/" + photoName)" target="_blank" onclick="window.open('@Url.Content("~/img/" + photoName)', '_blank'); return false;">
                    @photoName
                </a>
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Search", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
        }
    </tbody>
</table>
